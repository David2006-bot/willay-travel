---
// 1. Importamos Tailwind v4
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

// 2. Definimos que el título pueda cambiar según la página
interface Props {
	title?: string;
}

const { title = "Willay Travel - Hotel & Tours" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="m-0 w-full h-full font-sans antialiased text-gray-900 bg-white">
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>