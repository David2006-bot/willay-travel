---
const { pathname } = Astro.url;
const activeClass = "text-[#006080] border-b-2 border-[#006080]";
const inactiveClass = "text-white hover:text-[#006080] border-b border-white/5";
const imagenes = [
  "/img/huacachina_amigos_universidad.jpeg",
  "/img/paracas_playa_roja.jpeg",
  "/img/restaurante_ica_huacachina.jpeg",
];
---

<div class="bg-white py-2 px-6 flex justify-end items-center relative z-50">
  <div class="flex items-center text-blue-900">
    <a href="tel:+51900000000" class="hover:text-green-600 transition">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
        ></path></svg
      >
    </a>
  </div>
</div>

<nav
  class="bg-[#268E94]/80 backdrop-blur-md px-4 py-4 sticky top-0 z-50 shadow-md mt-[-1px]"
>
  <div
    class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl"
  >
    <a href="/" class="flex items-center z-30">
      <span class="self-center text-xl font-bold text-white">Willay Travel</span
      >
    </a>

    <button
      data-collapse-toggle="mobile-menu"
      type="button"
      class="inline-flex items-center p-2 text-white rounded-lg md:hidden hover:bg-white/10 focus:outline-none z-30"
    >
      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"
        ><path
          fill-rule="evenodd"
          d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
          clip-rule="evenodd"></path></svg
      >
    </button>

    <div
      class="hidden w-full md:block md:w-auto absolute md:static top-full left-0 z-20"
      id="mobile-menu"
    >
      <ul
        class="flex flex-col mt-0 font-serif font-medium md:flex-row md:space-x-8 md:mt-0 
             bg-black/70 backdrop-blur-2xl h-screen p-6 border-t border-white/10
             md:bg-transparent md:backdrop-blur-none md:h-auto md:p-0 md:border-0"
      >
        <li>
          <a
            href="/Inicio"
            class={`block py-4 ${pathname === "/Inicio" ? activeClass : inactiveClass} text-xl md:text-base md:border-0`}
            >Inicio</a
          >
        </li>
        <li>
          <a
            href="/Nosotros"
            class={`block py-4 ${pathname === "/Nosotros" ? activeClass : inactiveClass} text-xl md:text-base md:border-0`}
            >Nosotros</a
          >
        </li>
        <li>
          <a
            href="/Paquetes"
            class={`block py-4 ${pathname === "/paquetes" ? activeClass : inactiveClass} text-xl md:text-base md:border-0`}
            >Paquetes</a
          >
        </li>
        <li>
          <a
            href="/Contacto"
            class={`block py-4 ${pathname === "/Contacto" ? activeClass : inactiveClass} text-xl md:text-base md:border-0`}
            >Contacto</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>
<script>
  import "flowbite";
</script>
